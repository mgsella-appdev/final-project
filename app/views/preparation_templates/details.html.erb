<h1>
  Preparation #<%= @preparation.id %> details
</h1>

<div>
  <div>
    <a href="/preparations">
      Go back
    </a>
  </div>

  <div>
    <a href="/existing_preparation_form/<%= @preparation.id %>">
      Edit preparation
    </a>
  </div>

  <div>
    <a href="/delete_preparation/<%= @preparation.id %>">
      Delete preparation
    </a>
  </div>
</div>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @preparation.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@preparation.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@preparation.updated_at) %> ago
  </dd>
</dl>

